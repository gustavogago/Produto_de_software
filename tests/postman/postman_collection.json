      "name": "01 - Auth",
      "item": [
        {
          "name": "POST /api/token/",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"{{username}}\",\"password\":\"{{password}}\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/token/",
              "host": ["{{base_url}}"],
              "path": ["api", "token", ""]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login OK (200)\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Retorna tokens\", function () {",
                  "  var json = pm.response.json();",
                  "  pm.expect(json).to.have.keys(\"access\", \"refresh\");",
                  "  pm.environment.set(\"auth_token\", json.access);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
